<% content_for(:title, @stone_record.title) %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-4">
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @stone_record.title %></h1>
      <div class="text-sm text-gray-500 mb-4">
        <span>記録日: <%= @stone_record.record_date %></span> | 
        <span>サイズ: <%= @stone_record.stone_size %>mm</span> | 
        <span>投稿者: <%= @stone_record.user.name %></span>
      </div>
    </div>
    
    <div class="prose max-w-none">
      <%= simple_format(@stone_record.body) %>
    </div>
    
    <div class="mt-6 flex gap-4">
      <%= link_to '一覧に戻る', stone_records_path, 
          class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>
