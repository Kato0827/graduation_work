<% content_for(:title, '排石記録一覧') %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">排石記録一覧</h1>
    <% if user_signed_in? %>
      <%= link_to '新しい記録を追加', new_stone_record_path, 
          class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="grid gap-4">
    <% @stone_records.each do |stone_record| %>
      <div class="bg-white shadow-md rounded-lg p-6 border-l-4 border-blue-500">
        <div class="flex justify-between items-start mb-2">
          <h2 class="text-xl font-semibold text-gray-800">
            <%= link_to stone_record.title, stone_record_path(stone_record), 
                class: 'hover:text-blue-600' %>
          </h2>
          <span class="text-sm text-gray-500">
            <%= stone_record.record_date %>
          </span>
        </div>
        
        <p class="text-gray-600 mb-3"><%= truncate(stone_record.body, length: 100) %></p>
        
        <div class="flex justify-between items-center text-sm text-gray-500">
          <span>サイズ: <%= stone_record.stone_size %>mm</span>
          <span>投稿者: <%= stone_record.user.name %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
